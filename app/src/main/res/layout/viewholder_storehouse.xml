<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor"
                android:padding="16dp"
    >

    <TextView
        android:id="@+id/storehouse_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/image_frame_layout"
        android:layout_toStartOf="@+id/image_frame_layout"
        android:maxLines="2"
        android:padding="8dp"
        android:text="@string/storehouse_description"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/last_reading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storehouse_description"
        android:layout_toLeftOf="@+id/image_frame_layout"
        android:layout_toStartOf="@+id/image_frame_layout"
        android:padding="8dp"
        android:text="@string/last_reading"
        android:textColor="@color/primaryText"
        android:textSize="16sp"
        />

    <FrameLayout
        android:id="@+id/image_frame_layout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/stock_light"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/default_padding"
            />

        <ImageView
            android:id="@+id/check_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check"
            android:visibility="visible"/>
    </FrameLayout>


</RelativeLayout>