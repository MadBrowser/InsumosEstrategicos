<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor"
                android:padding="16dp"
    >

    <TextView
        android:id="@+id/storehouse_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/stock_light"
        android:layout_toStartOf="@+id/stock_light"
        android:maxLines="2"
        android:padding="8dp"
        android:text="@string/storehouse_description"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/last_reading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storehouse_description"
        android:layout_toLeftOf="@+id/stock_light"
        android:layout_toStartOf="@+id/stock_light"
        android:padding="8dp"
        android:text="@string/last_reading"
        android:textColor="@color/primaryText"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/stock_light"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="@dimen/default_padding"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>